@model Jogador
@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/jogadores.css">

<main>
    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {

            <form class="frm-cad-equipe" method="post" action="@Url.Action("Atualizar")">
                <div class="cadequipe-titulo">
                    <h1>Edição de Jogadores</h1>
                    <hr>
                </div>

                <input type="hidden" name="IdJogadorme" value="@ViewBag.Jogador.IdJogadorme">

                <select class="campo-entrada" id="equipe-select" name="IdEquipe">
                    <option value="0"> Selecione sua Equipe:</option>
                    @foreach (Equipe item in ViewBag.Equipe)
                    {
                        @if (item.IdEquipe == ViewBag.Jogador.IdEquipe)
                        {
                            <option value="@item.IdEquipe" selected>@item.Nome</option>
                        }
                        else
                        {
                            <option value="@item.IdEquipe">@item.Nome</option>
                        }
                    }
                </select>

                <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:"
                    value="@ViewBag.Jogador.Nome" name="Nome" required>
                <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:"
                    name="Email" required value="@ViewBag.Jogador.Email">
                <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:" name="Senha" required>
                <button type="submit">Atualizar</button>




            </form>
        }
    </section>
</main>








































